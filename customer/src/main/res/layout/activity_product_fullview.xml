<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Product_fullview">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:cardElevation="10dp">

        <ImageView
            android:id="@+id/backarrow1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:src="?attr/actionModeCloseDrawable"
            app:tint="@color/black" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:cardElevation="10dp"
        >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="?actionBarSize"
      android:orientation="horizontal"
   >

      <Button

          android:layout_width="170dp"
          android:layout_height="50dp"
          android:text="Add To Cart"
          android:textColor="@color/black"
          android:layout_marginLeft="10dp"
          />
      <Button
          android:id="@+id/ordernow1"
          android:layout_width="170dp"
          android:layout_height="50dp"
          android:text="Order Now"
          android:textColor="@color/black"
          android:layout_marginLeft="20dp"/>
  </LinearLayout>
    </androidx.cardview.widget.CardView>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?actionBarSize"
    android:layout_marginBottom="?actionBarSize"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/fullimg1"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:background="#65CFCFCF"
            android:scaleType="centerCrop"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/id123"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="product unique id"
            android:layout_marginLeft="25dp"
            android:textSize="12dp"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            android:layout_margin="10dp"
            app:cardUseCompatPadding="true"
            >

            <TextView
                android:id="@+id/titp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="30dp"
                android:fontFamily="sans-serif-black"
                android:text="product name"
                android:textColor="#505050"
                android:textSize="20dp" />
        <TextView
            android:id="@+id/fprc1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="price"
            android:layout_marginLeft="25dp"
            android:textColor="#000000"
            android:textSize="18dp"
            android:layout_marginTop="90dp"

            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="90dp"
                android:layout_marginBottom="30dp"
                android:fontFamily="sans-serif-black"
                android:text="10% off"
                android:background="#FFEB3B"
                android:backgroundTint="#FFEB3B"
                android:textColor="#000000"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/fdeliv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="130dp"
                android:layout_marginBottom="30dp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="delivey"
                android:textColor="#20950B"
                android:textSize="20dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            android:layout_margin="10dp"
            app:cardUseCompatPadding="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="product description"
            android:layout_marginLeft="25dp"
            android:textColor="#171717"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:fontFamily="monospace"

            />
            <TextView
                android:id="@+id/fdesc1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="product description"
                android:layout_marginLeft="25dp"
                android:textColor="#686868"
                android:textSize="16dp"
                android:layout_marginTop="76dp"
                android:layout_marginBottom="20dp"

                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardElevation="5dp"
            android:layout_margin="10dp"
            app:cardUseCompatPadding="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Supplier details"
                android:layout_marginLeft="25dp"
                android:textStyle="bold"
                android:textColor="#171717"
                android:layout_marginTop="10dp"
                android:fontFamily="monospace"
                android:textSize="18dp"/>

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:src="@drawable/ic_sss24"
                    android:layout_marginTop="43dp"
                    android:layout_marginLeft="33dp"
                    app:shapeAppearanceOverlay="@style/shpforrounded"
                    android:background="#D8D8D8"
                    app:strokeWidth="0.3dp"
                    app:strokeColor="@color/black"
                    />

            <TextView
                android:id="@+id/sn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="43dp"
                android:fontFamily="monospace"
                android:text="s enetrprice"
                android:textStyle="bold"
                android:textColor="#494848"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/sadd1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="69dp"
                android:fontFamily="monospace"
                android:text="sss123email@gmail.com"
                android:textColor="#686868"
                android:textSize="12dp" />

        </androidx.cardview.widget.CardView>




    </LinearLayout>
</ScrollView>
</RelativeLayout>