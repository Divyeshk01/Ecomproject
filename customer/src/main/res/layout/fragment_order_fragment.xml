<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".order_fragment">

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/recyclev123"
      android:layout_width="match_parent"
      android:layout_height="match_parent" />
  <com.airbnb.lottie.LottieAnimationView
      android:id="@+id/lotti_no_order1"
      android:layout_width="300dp"
      android:layout_centerInParent="true"
      app:lottie_rawRes="@raw/bluesearchnotfound"
      app:lottie_autoPlay="true"
      android:visibility="gone"
      android:layout_height="300dp"/>
  <TextView
      android:id="@+id/txtNo1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/lotti_no_order1"
      android:fontFamily="serif"
      android:text="No Order"
      android:textColor="#000000"
      android:visibility="gone"
      android:layout_centerHorizontal="true"
      android:textSize="18dp"
      android:textStyle="bold" />

</RelativeLayout>