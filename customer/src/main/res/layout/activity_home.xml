<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"

    android:id="@+id/dlay123"
    >

        <com.google.android.material.navigation.NavigationView

            android:id="@+id/nview1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:layout_gravity="start"
            app:headerLayout="@layout/dr_header"
            app:menu="@menu/fordrawerview" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#93D2EF"
   >

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/ttt123"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:pointerIcon="alias"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="22dp"
                        android:src="@drawable/ic_baseline_add_shopping_cart_24" />

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="70dp"
                        android:src="@drawable/ic_baseline_notifications_none_24" />
                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>


        <FrameLayout
            android:id="@+id/fram1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?actionBarSize"
            android:layout_marginBottom="?actionBarSize">

        </FrameLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bnav123"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_bnv"
            app:itemIconSize="25dp"
            app:itemIconTint="@drawable/navi_item_color"
            app:itemTextColor="@drawable/navi_item_color"
            app:menu="@menu/forhome" />
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>