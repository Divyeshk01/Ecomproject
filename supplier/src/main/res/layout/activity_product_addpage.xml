<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Product_addpage"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="upload product Image"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        />

    <ImageView
        android:id="@+id/pimg1"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/ic_outline_add_photo_alternate_24"
        android:background="#ECECEC"
        android:layout_marginTop="4dp"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        />


    <EditText
        android:id="@+id/pname1"
        android:layout_width="322dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/bgshape"
        android:drawableStart="@drawable/pen_baseline_border_color_24"
        android:drawablePadding="11dp"
        android:drawableTint="@color/black"
        android:hint="Product Name"
        android:inputType="text"
        android:paddingStart="11dp" />

        <EditText
            android:id="@+id/pprc1"
            android:layout_width="322dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="@drawable/bgshape"
            android:paddingStart="11dp"
            android:drawablePadding="11dp"
            android:drawableTint="@color/black"
            android:hint="Product Price"
            android:inputType="number"
            android:drawableStart="@drawable/ic_baseline_currency_rupee_24"
           />

        <EditText
            android:layout_width="322dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="@drawable/bgshape"
            android:paddingStart="11dp"
            android:drawablePadding="11dp"
            android:drawableTint="@color/black"
            android:id="@+id/pdelivery1"
            android:hint="delivery charge(free)"
            android:inputType="text"
            android:drawableStart="@drawable/ic_baseline_delivery_dining_24"
            />
        <EditText
            android:layout_width="322dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="@drawable/bgshape"
            android:paddingStart="11dp"
            android:drawablePadding="11dp"
            android:drawableTint="@color/black"
            android:id="@+id/pdesc1"
            android:hint="description"
            android:inputType="textMultiLine"
            android:drawableStart="@drawable/ic_assignment_24"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="select Type of product"
            android:textSize="17dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="40dp"
            />

        <Spinner
            android:id="@+id/spiner1"
            android:layout_width="322dp"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="50dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bgshape"
            />

        <Button
            android:id="@+id/pro_addbtn1"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginBottom="100dp"
            android:text="add product"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/purple_200"
            android:textColor="@color/black"
            />

    </LinearLayout>

</ScrollView>