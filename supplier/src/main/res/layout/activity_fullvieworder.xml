<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fullvieworder">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:cardElevation="7dp">
        <ImageView
            android:id="@+id/bk123"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:src="?attr/actionModeCloseDrawable"
            app:tint="@color/black" />

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize">


        <ImageView
            android:id="@+id/ppic1"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="33dp"
            android:layout_marginBottom="15dp"
            android:background="#EAE9E9"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/pnm1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="42dp"
            android:fontFamily="serif"
            android:text="uno reversew card"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/prc12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="90dp"
            android:fontFamily="serif"
            android:text="$ 2000"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pid1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="140dp"
            android:text="product id: F488fh7d7h8yj8v4q8bf11:33:34"
            android:textColor="#000000"
            android:textSize="10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/ppic1"
            android:background="#CCCCCC" />

        <TextView
            android:id="@+id/quntity1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="190dp"
            android:layout_marginBottom="10dp"
            android:text="Qty :1"
            android:textColor="#1F8F00"
            android:textSize="16dp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/quntity1"
            android:background="#CCCCCC" />

        <TextView
            android:id="@+id/tpaym1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="235dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="sans-serif"
            android:text="Total payment:12000"
            android:textColor="#000000"
            android:textSize="16dp" />


        <TextView
            android:id="@+id/paytype123"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="280dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="serif"
            android:text=" payment methods:cash on delivery(cod)"
            android:textColor="#000000"
            android:textSize="12dp" />

        <View
            android:id="@+id/vl1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/paytype123"
            android:background="#CCCCCC" />

        <TextView
            android:id="@+id/ttt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vl1"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif"
            android:text="Customer Details :"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cname1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ttt1"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            android:text="cust Name: fall pal"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/email123"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cname1"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            android:text="cust email:ddd@gmail.com"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/addr1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email123"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            android:text="cust addres:12,454,34djnfk ,surat"
            android:textColor="@color/black"
            android:textSize="14dp" />
    </RelativeLayout>

</RelativeLayout>